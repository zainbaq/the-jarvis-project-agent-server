[Unit]
Description=Jarvis Backend API Server
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/the-jarvis-project-agent-server
Environment="PATH=/home/ubuntu/the-jarvis-project-agent-server/venv/bin"
EnvironmentFile=-/home/ubuntu/the-jarvis-project-agent-server/backend/.env
ExecStart=/home/ubuntu/the-jarvis-project-agent-server/venv/bin/uvicorn backend.app:app --host 0.0.0.0 --port 3000 --workers 4
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
